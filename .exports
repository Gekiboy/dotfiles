###########
# Exports #
###########

# Make vim the default editor
export EDITOR="vim"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups

# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"

########################
# OS Specific  Exports #
########################

if [ "$(uname -s)" == "Darwin" ]; then
    #######
	# OSX #
	#######

    # Link Homebrew casks in `/Applications` rather than `~/Applications`
    export HOMEBREW_CASK_OPTS="--appdir=/Applications"

    # Java + Jenv
    if [ -d ~/.jenv/versions/1.8 ]; then
        eval "$(jenv init -)"
        jenv global 1.8
        export JAVA_HOME="$(/usr/libexec/java_home)"
    else
        echo "Java 1.8 not installed"
    fi

    # SwiftEnv
    if which swiftenv > /dev/null; then
        eval "$(swiftenv init -)"
        swiftenv global 3.0.1
    fi

    # NodeJs + NVM
    if which nvm > /dev/null; then
        source $(brew --prefix nvm)/nvm.sh &>/dev/null
        eval "nvm use --delete-prefix v5.11 &>/dev/null"
    fi 

    # Python/PyEnv/Virtualenvs
    if which pyenv > /dev/null; then
        export PYENV_ROOT="$(brew --prefix pyenv)"
        eval "$(pyenv init -)"
        pyenv global 2.7.12

        export WORKON_HOME="~/.virtualenvs"
        pyenv virtualenvwrapper
    fi
    
    # AutoEnv
    source "$(brew --prefix autoenv)/activate.sh"
fi
